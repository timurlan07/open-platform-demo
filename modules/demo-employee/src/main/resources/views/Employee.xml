<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views https://axelor.com/xml/ns/object-views/object-views_7.1.xsd">

    <grid name="employee-grid" title="Employee List" model="com.axelor.employee.db.Employee">
        <field name="firstName" />
        <field name="lastName" />
        <field name="email" />
        <field name="age" />
        <field name="active" />
    </grid>

    <form name="employee-form" title="Employee" model="com.axelor.employee.db.Employee">
        <panel title="Overview">
            <field name="firstName" colSpan="12"/>
            <field name="lastName" />
            <field name="email" />
            <field name="age" />
        </panel>
    </form>

</object-views>
